@model architektura.Models.BUILD
@{
    ViewBag.Title = "Delete";
}
@using architektura.Models;
@{
    int idSTYL = Model.idSTYL;
    int idBUILD = Model.idBUILD;

    STYL styl = STYLService.getSTYLById(idSTYL);

}
<h3>Are you sure you want to delete this build <b>@Model.buildname</b>?</h3>
<div>
    <div class="container marketing">
        <hr class="featurette-divider">
        <div class="row featurette">
            <div class="col-md-7">
                <ul class="list-group">
                    <li class="list-group-item">Name: @Model.buildname</li>
                    <li class="list-group-item">City: @Model.city</li>
                    <li class="list-group-item">Country: @Model.country</li>
                    <li class="list-group-item">Styl: @Model.idSTYL</li>
                </ul>
            </div>

        </div>
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Back to " + @styl.name + "details", "Details", "STYL", new { id = styl.idSTYL }, new { @class = "btn btn-default" })
            </div>
        }
    </div>

</div>
